<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <meta name="monetization" content="$ilp.gatehub.net/348218105">
    <meta name="theme-color" content="#111111">
    <meta name="color-scheme" content="dark light">

    <link rel="modulepreload" href="/js/dark-mode-toggle.min.mjs">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap">
    <link rel="icon" href="/static/icon.png">
    <link rel="apple-touch-icon" href="/static/icon.png">
    <link rel="canonical" href="{{ page.url | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="author" href="https://tomayac.com/humans.txt" type="text/plain">

    <script type="module">
      {% set js %}
        const po = new PerformanceObserver(async (entryList) => {
          const module = await import('/js/performance-metrics.mjs');
          for (let entry of entryList.getEntries()) {
            switch (entry.entryType) {
              case 'largest-contentful-paint':
                module.render({type: 'lcp', value: entry.renderTime || entry.loadTime, element: entry.element});
                break;
              case 'layout-shift':
                if (entry.hadRecentInput) {
                  return;
                }
                module.render({type: 'cls', value: entry.value});
                break;
              case 'first-input':
                module.render({type: 'fid', value: entry.processingStart - entry.startTime, name: entry.name});
                po.disconnect();
                break;
            }
          }
        });
        po.observe({
          entryTypes: [
            'largest-contentful-paint',
            'first-input',
            'layout-shift',
          ],
        });
      {% endset %}
      {{ js | jsmin | safe }}
    </script>
    <script>
      {% set js %}
        if (matchMedia('(prefers-color-scheme:dark)').media === 'not all') {
          document.documentElement.style.display = 'none';
          document.head.insertAdjacentHTML(
              'beforeend',
              '<link rel="stylesheet" href="/css/light.css" onload="document.documentElement.style.display = \'\'">'
          );
        }
      {% endset %}
      {{ js | jsmin | safe }}
    </script>
    <link rel="stylesheet" href="/css/light.css" media="(prefers-color-scheme: light), (prefers-color-scheme: no-preference)">
    <link rel="stylesheet" href="/css/dark.css" media="(prefers-color-scheme: dark)">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/prism-theme.css">

    <link rel="webmention" href="https://webmention.io/blog.tomayac.com/webmention">
    <link rel="pingback" href="https://webmention.io/blog.tomayac.com/xmlrpc">

    <link rel="manifest" href="/manifest.webmanifest">

    <title>{{ renderData.title or title or metadata.title }}</title>

    <script type="module" src="/js/script.mjs"></script>

    <meta property="twitter:account_id" content="1510101733">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="@tomayac">
    <meta name="twitter:title" content="{{ renderData.title or title or metadata.title }}">
    <meta name="twitter:description" content="{{ renderData.description or description or metadata.description }}">
    <meta name="twitter:image" content="https://blog.tomayac.com{{ page.url | url }}screenshot-dark.png">

    <meta property="og:url" content="https://blog.tomayac.com{{ page.url | url }}">
    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ renderData.title or title or metadata.title }}">
    <meta property="og:description" content="{{ renderData.description or description or metadata.description }}">
    <meta property="og:image" content="https://blog.tomayac.com{{ page.url | url }}screenshot-dark.png">

    <script type="application/ld+json">
      {% set schemaDotOrg %}
        {
          "@context": "https://schema.org",
          "@type": "BlogPosting",
          "headline": "{{ renderData.title or title or metadata.title }}",
          "image": "https://blog.tomayac.com{{ page.url | url }}screenshot-dark.png",
          "url": "https://blog.tomayac.com{{ page.url | url }}",
          "datePublished": "{{ page.date.toISOString() }}",
          "dateCreated": "{{ page.date.toISOString() }}",
          "dateModified": "{{ page.date.toISOString() }}",
          "description": "{{ renderData.description or description or metadata.description }}",
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "https://blog.tomayac.com/"
          },
          "author": {
            "@type": "Person",
            "name": "Thomas Steiner",
            "email": "steiner.thomas@gmail.com",
            "image": "https://blog.tomayac.com/static/icon.png"
          },
          "publisher": {
            "@type": "Organization",
            "name": "Thomas Steiner",
            "email": "steiner.thomas@gmail.com",
            "logo": {
              "@type": "ImageObject",
              "url": "https://blog.tomayac.com/static/icon.png"
            }
          }
        }
      {% endset %}
      {{ schemaDotOrg | jsonMinify | safe }}
    </script>

  </head>
